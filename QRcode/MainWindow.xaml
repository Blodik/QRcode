<Window x:Class="QRcode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRcode"
        mc:Ignorable="d"
        Title="Генерация QR-code" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox1" HorizontalAlignment="Center" Margin="0,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260"/>
        <Label Content="Вставте тест" HorizontalAlignment="Left" Margin="270,78,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Button1" Content="Сгенерировать" HorizontalAlignment="Left" Margin="604,307,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.443,0.567" Width="153" Click="Button_Click"/>
        <Button x:Name="Button2" Content="Отчистить" HorizontalAlignment="Left" Margin="604,353,0,0" VerticalAlignment="Top" Width="153" Click="Button2_Click"/>
        <Image x:Name="Image1" HorizontalAlignment="Left" Height="157" Margin="142,180,0,0" VerticalAlignment="Top" Width="157" RenderTransformOrigin="0.513,0.5"/>

    </Grid>
</Window>
